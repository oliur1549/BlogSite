@model CreateBlog
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: "#Text" });</script>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h3>Blog Form</h3>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            <partial name="_ActionMessage" model="@Model.Response" />
                            <form asp-area="Admin" asp-controller="Blog" asp-action="AddBlog" method="post" enctype="multipart/form-data">
                                <div class="card-body">


                                    <div class="form-group">
                                        <label for="Title">Title</label>
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Description</label>
                                        <input type="text" class="form-control" asp-for="Text" placeholder="Enter Description">
                                    </div>
                                    <div class="form-group">
                                        <label for="Datetime">Date Time</label>
                                        <input type="date" class="form-control" asp-for="datetime" placeholder="Enter Date">
                                    </div>
                                    <div class="form-group">
                                        <label for="Image">Photo</label>
                                        <input type="file" class="form-control" asp-for="imageFile" accept="image/*">
                                    </div>
                                    <div class="form-group">
                                        <label for="Category">Category</label>
                                        <select asp-for="CategoryId" asp-items="@Model.GetCategoryList()" class="form-control">
                                            <option>Please select one</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

